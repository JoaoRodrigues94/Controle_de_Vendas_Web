@model IEnumerable<Controle_de_Vendas.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedor";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr class="success">
      <th>
        @Html.DisplayNameFor(model => model.VendedorID)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Nome)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Email)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Aniversario)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SalarioBase)
      </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model)
    {
      <tr>
        <td>@Html.DisplayFor(modelItem => item.VendedorID)</td>
        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Aniversario)</td>
        <td>@Html.DisplayFor(modelItem => item.SalarioBase)</td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.VendedorID">Edit</a>
        </td>
        <td>
          <a asp-action="Details" asp-route-id="@item.VendedorID">Details</a>
        </td>
        <td>
          <a asp-action="Delete" asp-route-id="@item.VendedorID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>