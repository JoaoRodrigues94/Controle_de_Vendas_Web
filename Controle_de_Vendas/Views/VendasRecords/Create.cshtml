@model Controle_de_Vendas.Models.Vendas

@{
  ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Departamento</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="VendasID" class="control-label"></label>
        <input asp-for="VendasID" name="VendasID" id="VendasID" class="form-control" />
        <span asp-validation-for="VendasID" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input type="date" name="Data" id="Data" asp-for="Data" class="form-control" />
