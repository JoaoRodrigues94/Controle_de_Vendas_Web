      </div>
      <div class="form-group">
        <label asp-for="Vendedor.VendedorID" class="control-label"></label>
        <select asp-for="Vendedor.VendedorID" name="Nome" id="Nome" asp-items="@ViewBag.Vendedores" class="form-control">
          <option disabled selected>Selecione</option>
        </select>
      </div>
      <div class="form-group">
        <label asp-for="Qtde" class="control-label"></label>
        <input asp-for="Qtde" name="Qtde" id="Qtde" class="form-control" />
        <span asp-validation-for="Qtde" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
      </div>
    </form>
  </div>
</div>
<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

